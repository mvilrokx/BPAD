<% title "Issues" %>

<table>
  <tr>
    <th>Name</th>
    <th>Issueable</th>
    <th>Issueable Type</th>
    <th>Description</th>
    <th>Status</th>
  </tr>
  <% for issue in @issues %>
    <tr>
      <td><%=h issue.name %></td>
      <td><%=h issue.issueable_id %></td>
      <td><%=h issue.issueable_type %></td>
      <td><%=h issue.description %></td>
      <td><%=h issue.status %></td>
      <td><%= link_to "Show", issue %></td>
      <td><%= link_to "Edit", edit_issue_path(issue) %></td>
      <td><%= link_to "Destroy", issue, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Issue", new_issue_path %></p>
