<% form_for @issue do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :issueable_id %><br />
    <%= f.text_field :issueable_id %>
  </p>
  <p>
    <%= f.label :issueable_type %><br />
    <%= f.text_field :issueable_type %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p><%= f.submit %></p>
<% end %>
