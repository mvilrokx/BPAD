<% title "Functional Work Units" %>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Parent</th>
  </tr>
  <% for functional_work_unit in @functional_work_units %>
    <tr>
      <td><%=h functional_work_unit.name %></td>
      <td><%=h functional_work_unit.type %></td>
      <td><%=h functional_work_unit.parent_id %></td>
      <td><%= link_to "Show", functional_work_unit %></td>
      <td><%= link_to "Edit", edit_functional_work_unit_path(functional_work_unit) %></td>
      <td><%= link_to "Destroy", functional_work_unit, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Functional Work Unit", new_functional_work_unit_path %></p>
