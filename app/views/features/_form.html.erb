<% form_for @feature, :html => {:class => defined?(call_type) ? call_type : ""} do |f| %>
  <%= f.error_messages %>
  <h5>Name</h5>
  <%= @feature.name %>
  <p />
  <h5>Owner</h5>
  <strong id="owner"><%= @feature.owner.username if @feature.owner %></strong> <%= link_to 'Are YOU the owner?', change_owner_feature_watchings_path(@feature), :class => "button update_owner" %>
  <p />
  <h5>Last Updated By:</h5>
  <%= User.find(@feature.originator).username if @feature.originator %>
  <p />
  <h5><%= f.label :priority %></h5>
	<%= f.select :priority, Feature::PRIORITY %>

  <p />
  <h5><%= f.label :feature_type %></h5>
		<%= f.select :feature_type, Feature::FEATURE_TYPES, {:include_blank => true} %>
  <p />
  <h5><%= f.label :scope %></h5>
  <%= f.text_field :scope %>
  <p />
  <h5><%= f.label :description %></h5>
  <%= f.text_area :description %>
  <hr class="space">
  <%= render :partial => "issue_list" %>
  <hr class="space">
  <p>
    <%= content_tag :button, "Save Changes", :type => :submit, :class => "button" %>
  </p>
<% end %>

<%= render :partial => "shared/cleditor_script" %>
<%= render :partial => "shared/set_detail_position" %>

