<p><label>Issues</label> &nbsp;&nbsp; <%= link_to "Hide", "#", :class => "button", :id => "toggle_issues" %><%= link_to "Refresh", feature_issues_path(@feature), :class => "button", :id => "refresh_issues" %><br /><p>
<div id="issues">
  <table class="pretty striped">
    <tr>
      <th>name</th>
      <th>status</th>
      <th style="text-align: center;">action</th>
    <tr>
    <% for issue in @feature.issues do %>
      <tr>
        <td><%= issue.name %></td>
        <td><%= issue.status %></td>
        <td>
          <%= link_to "Update", edit_feature_issue_path(@feature, issue), :class => "button dialog_form_link" %>
          <%= link_to "Delete", issue, :confirm => 'Are you sure?', :method => :delete, :class => "button negative" %>
        </td>
      <tr>
    <% end %>
  </table>
  <p>
    <%= link_to "Add Issue", new_feature_issue_path(@feature), :class => "button dialog_form_link" %>
  </p>
</div>

