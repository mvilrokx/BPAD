- content_for :head do
  = javascript_include_tag 'jstree-read-only/jquery.jstree.js'


- title "Mappings for Step #{@step.element_name}", false

#title
  %span
    Mappings for Step "#{@step.element_name}""

.content
  = link_to "Back to Steps", path_steps_path(@step.path), :class => "button"

.content
  #left_column
    #button_bar
      %button{:class => "button", :id => "open_current"} Open Selected
      %button{:class => "button", :id => "close_current"} Close Selected
      %button{:class => "button", :id => "open_all"} Open All
      %button{:class => "button", :id => "close_all"} Close All
    #lba_tree

  #right_column
    %h3 Mapped Features
    %ul{:id => "feature-list"}
      - for mapped_feature in @mapped_features
        = render :partial => "available_feature", :locals => { :mapped_feature => mapped_feature }

.content
  = link_to "Back to Steps", path_steps_path(@step.path), :class => "button"

= render :partial => "jstree_script"

