<% form_for @user do |f| %>
  <%= f.error_messages %>

 <table>
   <tr>
    <td width="20%">  <%= f.label :username  %>  </td>
    <td>  <%= f.text_field :username %> </td>
   </tr>

   <tr>
       <td>   <%= f.label :email, "Email Address" %></td>
       <td>   <%= f.text_field :email %> </td>
   </tr>

   <tr>
     <td>   <%= f.label :name %> </td>
     <td>   <%= f.text_field :name %></td>
   </tr>

   <tr>
      <td>   <%= f.label :last_name %> </td>
     <td>   <%= f.text_field :last_name %></td>
   </tr>

   <tr>
     <td>  <%= f.label :password %></td>
     <td>  <%= f.password_field :password %></td>
   </tr>

   <tr>
    <td>   <%= f.label :password_confirmation, "Confirm Password" %></td>
    <td>   <%= f.password_field :password_confirmation %></td>
   </tr>


   <tr>
    <td>  <%= f.label :iteration_id, "Iteration you are Working on" %> </td>
     <td>
       <% if iterations||false %>
        <%= f.collection_select :iteration_id, iterations, :id, :name, {:prompt => "Select", :include_blank => true} %>
        <% else %>
            You need to create iterations before you can actualy do anything.
      	<% end %>
     </td>
   </tr>

  <tr  valign="top">
    <td >    <%= f.label :roles   %></td>
    <td>
        <% for role in Role.all %>
          <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
          <%=h role.name %><br />
        <% end %>
    </td>
  </tr>


</table>

<br />
  <p><%= f.submit "Submit" %></p>


<% end %>

