<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
 	  <%= f.label :iteration_id, "Iteration you are Working on" %><br />
	  <% if iterations||false %>
			<%= f.collection_select :iteration_id, iterations, :id, :name, {:prompt => "Select", :include_blank => true} %>
	  <% else %>
	  	You need to create iterations before you can actualy do anything.
  	<% end %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :roles %><br />
    <% for role in Role.all %>
      <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
      <%=h role.name %><br />
    <% end %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
