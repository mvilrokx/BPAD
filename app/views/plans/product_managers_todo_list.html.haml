- title "Product Managers Todo List", false

#title
  %span
    List

.content
  %table{:class => ["pretty", "striped"]}
    %tr
      %th= "id"
      %th= "Name"
      %th= "Priority"
      %th= "Iteration Month"
      %th= "Mapping Deadline"

    -@planned_paths.each do |path, value|
      %tr
        %td=h path.id
        %td=h path.name
        %td=h path.priority
        %td=h value[0].strftime("%B")
        %td=h (value[0]-3.months).end_of_month.strftime("%m/%d/%Y")

